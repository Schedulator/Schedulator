@model Schedulator.Models.ApplicationUser
@{
    ViewBag.Title = "Home Page";
}
@using Microsoft.AspNet.Identity
<div class="jumbotron">
    <h1>Schedulator</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Personal Information</h2>
        <p>
            @Html.DisplayNameFor(model => model.FirstName):

            @Html.DisplayFor(modelItem => modelItem.FirstName)
            <br />
            @Html.DisplayNameFor(model => model.LastName):
            @Html.DisplayFor(modelItem => modelItem.LastName)
            <br />
            <br />
            @{
            if (Model.Program != null) {
                @Html.DisplayNameFor(model => model.Program) <span>Information:</span>
                <ul>
                    <li>Program Name:
                        <ul>
                            <li>@Html.DisplayFor(modelItem => modelItem.Program.ProgramName)</li>
                        </ul>
                    </li>
                    <li>Program Option:
                        <ul>
                            <li>@Html.DisplayFor(modelItem => modelItem.Program.ProgramOption)</li>
                        </ul>
                    </li>
                    <li>Program Credits:
                        <ul>
                            <li>@Html.DisplayFor(modelItem => modelItem.Program.CreditsRequirement)</li>
                        </ul>
                        <br />
                    </li>
                </ul>
            }
            }
        </p>

    </div>
    <div class="col-md-4">
        <h2>Academics</h2>
        <ul class="list-group">
            @foreach (var schedules in Model.Schedules)
            {
                foreach (var enrollments in schedules.Enrollments)
                {
                    <li class="list-group-item">
                        @Html.DisplayFor(modelItem => enrollments.Course.CourseLetters) @Html.DisplayFor(modelItem => enrollments.Course.CourseNumber)
                        @Html.DisplayFor(model => enrollments.Grade)

                    </li>
                }

            }
        </ul>

    </div>
    <div class="col-md-4">
        <button type="button" class="btn btn-primary">View Progression</button>
        <button type="button" class="btn btn-primary">View Transcript</button>
        <button type="button" class="btn btn-primary">View Course Sequence</button>
        <h2>Other info</h2>
        <p>Personal Stuff</p>
    </div>


</div>