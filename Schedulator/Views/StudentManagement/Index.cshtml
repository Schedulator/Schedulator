@model IEnumerable<Schedulator.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

    <form method="get">
        <input type="search" name="searchTerm" />
        <input type="submit" value="Search By Name" />
    </form>

<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Program
        </th>       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName @item.LastName</td>    
            <td>@item.Program.ProgramName - @item.Program.ProgramOption</td> 
            <td>                
                @Html.ActionLink("Student Details", "Details", new { id = item.Id })
            </td>       
        </tr>
        
    }
</table>

