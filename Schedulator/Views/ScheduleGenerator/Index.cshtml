@model Schedulator.Models.ScheduleGenerator

@{
    ViewBag.Title = "Schedule Generator";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Schedule Maker</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
            @*Html.LabelFor(model => model.Preference.Courses, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                @Html.EditorFor(model => model.Preference.Courses, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Preference.Courses.ToArray()[0], "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="steps">
                    <p>Step 1: Select a semester</p>
                    <input type="radio" name="semester" /> Summer 2015 <br />
                    <input type="radio" name="semester" /> Fall 2015 <br />
                    <input type="radio" name="semester" /> Winter 2016 <br />
                </div>
                <div class="steps">
                    <p>Step 2: Select your courses</p>
                    Add a course: <input type="text"/>
                    <input type="button" value="Add"/>
                </div>
                <div class="steps">
                    <p>Step 3: Select your preferences</p>
                    <input type="checkbox" /> Most days-off
                    <input type="checkbox" /> Morning class
                    <input type="checkbox" /> Mid-day class
                    <input type="checkbox" /> Night class

                </div>

                <input type="submit" value="Generate Schedule" class="btn btn-default" />

            </div>
        </div>
    </div>
}



