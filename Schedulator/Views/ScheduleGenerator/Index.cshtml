@model Schedulator.Models.ScheduleGenerator
@{ViewBag.Title = "Schedule Generator";}
@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<script src="@Url.Content("~/Scripts/course.autocomplete.js")" type="text/javascript"></script>

<!-- Title -->
<h2 id="pageTitle">@ViewBag.Title</h2>

<!-- Main Wrapper -->
<div id="mainWrapper" class="row" style="min-height:700px">

    <!-- Generator Preferences -->
    <div id="schedGenPref" class="contentBox">

        @using (Ajax.BeginForm("GenerateSchedules",new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "result" })){
            <!-- Options -->
            <div id="prefOptions">
                <!-- Semesters -->
                <div class="prefs">
                    <p>Step 1: Select a semester</p>
                    <ul>
                        <li><input type="radio" name="semester" value="Fall"/> Fall 2015</li>
                        <li><input type="radio" name="semester" value="Winter"/> Winter 2016</li>
                        <li><input type="radio" name="semester" value="Summer" checked> Summer 2016 </li>
                    </ul>
                </div>

                <!-- Courses -->
                <div class="prefs">
                    <p>Step 2: Select your courses</p>
                    <ul class="ui-widget">
                        <li><span>Add a course: </span>@Html.TextBox("courseName", "", new { id= "suggestion", onkeyup = "showHint(this.value)" })
                            <span style="margin-left:10px;"><input type="button" id="addCourse" value="Add" /></span>
                        </li>
                        <li>
                            <br />
                            <div class="container-fluid">
                                <div class="row" id="selectedCourses">
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>

                    <!-- Preferences -->
                    <div class="prefs">
                        <p>Step 3: Select your preferences</p>
                        <ul id="schedPref">
                            <li><input type="checkbox" name="timeOption" value="Morning" /> Morning class</li>
                            <li><input type="checkbox" name="timeOption" value="Day" /> Mid-day class</li>
                            <li><input type="checkbox" name="timeOption" value="Night" /> Night class</li>
                        </ul>
                    </div>

                    <div id="generatePref">
                        <input type="submit" value="Generate Schedule" class="btn btn-default" id="generateSch" />
                    </div>
                    <input type="button" value="Recommend Me Courses" class="btn btn-default" id="showCourseSequence" />
                    <div id="courseSequenceRecommend" hidden>

                    </div>
                </div><!--EO #prefOptions-->
        }
    </div><!-- EO #schedGenPref-->

    <div id="divProcessing" style="display:none;">
        Processing . . . <img src="~/Content/img/ajax-loader.gif" />
    </div>

    <!-- Schedules results -->
    <div id="result"></div><!-- EO #result -->


</div><!-- EO #mainWrapper-->

@section Scripts {
    <script type="text/javascript">



    </script>
}



