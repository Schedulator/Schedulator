@model Schedulator.Models.Transcript

@{
    ViewBag.Title = "View Transcript";
}

<h1>Student Transcript</h1>

@{
   
    <ul>
        @{
            foreach (var year in Model.TranscriptYears)
            {
                <li style="list-style-type: none">
                    Year of @Html.DisplayFor(model => year.Year)
                    <ul>
                        @{
                            foreach (var semester in year.TranscriptSemesters)
                            {
                                <li>
                                    Semester: @Html.DisplayFor(model => semester.Season)
                                    <ul>
                                        @{
                                            foreach (var enrollment in semester.Enrollments)
                                            {
                                                if (enrollment.Grade != null)
                                                {
                                                    <li>@Html.DisplayFor(modelItem => enrollment.Course.CourseLetters) @Html.DisplayFor(modelItem => enrollment.Course.CourseNumber) @Html.DisplayFor(modelItem => enrollment.Grade)</li>
                                                }
                                                else
                                                {
                                                    <li>@Html.DisplayFor(modelItem => enrollment.Course.CourseLetters) @Html.DisplayFor(modelItem => enrollment.Course.CourseNumber)</li>
                                                }
                                            }
                                        }
                                    </ul>
                                </li>
                               
                                    if (semester.SemesterGPA > -1)
                                    {
                                        <li style="list-style-type: none">Total Semester GPA: @Html.DisplayFor(modelItem => semester.SemesterGPA)</li>
                                    }
                                    else
                                    {
                                        <li style="list-style-type: none"><br /></li>
                                    }
                                
                                <li style="list-style-type: none"><br /></li>
                            }
                        }
                    </ul>
                </li>
               
                    if (year.YearGPA > -1)
                    {
                        <li style="list-style-type: none">Total Year GPA: @Html.DisplayFor(modelItem => year.YearGPA)</li>
                    }
                    else
                    {
                        <li style="list-style-type: none"><br /></li>
                    }
                    <li style="list-style-type: none"><br /></li>
                }
            }
    </ul>
}
